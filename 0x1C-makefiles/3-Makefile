qq.PHONY: all clean oclean fclean re
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm

all: ${NAME}

%.o: %.c
	${CC} -c -o $@ $<
school: $OBJ
	${CC} ${OBJ} -o $@
clean:
	${RM} -f *~ ${NAME}
oclean:
	${RM} -f ${OBJ}
fclean:
	${MAKE} clean
	${MAKE} oclean
re:
	${MAKE} oclean
	${MAKE} all
